<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="c:\temp\internal-nlog-AspNetCore.txt">

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- the targets to write to -->
  <targets>
    <!-- File Target for own log messages with extra web details using some ASP.NET core renderers -->
    <target xsi:type="File" name="mylogfile" fileName="D:\temp\logger-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}|${callsite}| body: ${aspnet-request-posted-body}" />

	  <target name="email" xsi:type="Mail"
	subject="Sent From The Logger!"
	to="324861285@mby.co.il"
	from="siteloggermail@gmail.com"
	body="${message}${newline}"
	smtpUserName="siteloggermail@gmail.com"
	smtpAuthentication="Basic"
	secureSocketOption="SslOnConnect"
	enableSsl="true"
	smtpPassword="lovewebapi"
	smtpServer ="smtp.gmail.com"
	smtpPort="587"
/>
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
   
    <!--Skip non-critical Microsoft logs and so log only own logs (BlackHole) -->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <logger name="System.Net.Http.*" maxlevel="Info" final="true" />

    <logger name="*" minlevel="Trace" writeTo="mylogfile" />

	  <logger name="*" minlevel="Trace" writeTo="email" />
  </rules>
</nlog>
